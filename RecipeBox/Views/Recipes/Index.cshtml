@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Recipes</h1>

@if (@Model.Count == 0)
{
  <h3>No items have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Recipe recipe in Model)
    {
      <li>@Html.ActionLink($"{item.Description}", "Details", new { id = recipe.RecipeId }) | @recipe.Tag.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new item", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>